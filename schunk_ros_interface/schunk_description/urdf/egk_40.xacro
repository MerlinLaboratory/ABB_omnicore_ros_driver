<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro" name="egk_40">

  <xacro:property name="pi" value="3.141592653589793" />

  <!-- Define a material -->
  <!-- <material name="Black">
    <color rgba="0.1 0.1 0.1 1" />
  </material> -->

  <!-- <material name="Grey">
    <color rgba="0.5 0.5 0.5 1" />
  </material> -->

  <xacro:macro name="egk_40" params="prefix">

    <!-- Main gripper body -->
    <link name="${prefix}gripper_body">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://schunk_description/meshes/egk40/visual/egk40_body.dae"
            scale="0.001 0.001 0.001" />
        </geometry>
        <material name="Grey" />
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://schunk_description/meshes/egk40/collision/egk40_body.stl"
            scale="0.001 0.001 0.001" />
        </geometry>
      </collision>
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <mass value="1.5" />
        <inertia
          ixx="1.0" ixy="0.0" ixz="0.0"
          iyy="1.0" iyz="0.0"
          izz="1.0" />
      </inertial>
    </link>

    <!-- Finger 1 -->
    <link name="${prefix}finger1">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://schunk_description/meshes/egk40/visual/slider.dae"
            scale="0.001 0.001 0.001" />
        </geometry>
        <material name="Black" />
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://schunk_description/meshes/egk40/collision/slider.stl"
            scale="0.001 0.001 0.001" />
        </geometry>
      </collision>
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <mass value="0.3" />
        <inertia
          ixx="0.1" ixy="0.0" ixz="0.0"
          iyy="0.1" iyz="0.0"
          izz="0.1" />
      </inertial>
    </link>

    <!-- Finger 2 -->
    <link name="${prefix}finger2">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://schunk_description/meshes/egk40/visual/slider.dae"
            scale="0.001 0.001 0.001" />
        </geometry>
        <material name="Black" />
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://schunk_description/meshes/egk40/collision/slider.stl"
            scale="0.001 0.001 0.001" />
        </geometry>
      </collision>
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <mass value="0.3" />
        <inertia
          ixx="0.1" ixy="0.0" ixz="0.0"
          iyy="0.1" iyz="0.0"
          izz="0.1" />
      </inertial>
    </link>

    <!-- joints: main serial chain -->
    <joint name="${prefix}finger1_joint" type="prismatic">
      <parent link="${prefix}gripper_body" />
      <child link="${prefix}finger1" />
      <origin xyz="0.016 0.071 0.02" rpy="0 ${pi/2} 0" />
      <limit lower="0.0" upper="0.0415" effort="1000.0" velocity="10.0" />
    </joint>

    <joint name="${prefix}finger2_joint" type="prismatic">
      <parent link="${prefix}gripper_body" />
      <child link="${prefix}finger2" />
      <origin xyz="-0.016 0.071 -0.02" rpy="0 ${-pi/2} 0" />
      <limit lower="0.0" upper="0.0415" effort="1000.0" velocity="10.0" />
    </joint>

  </xacro:macro>

</robot>